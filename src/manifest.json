{
  "name": "VNote",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "description": "一个简单的文本编辑器，随时记录你的想法",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "VNote",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["http://*/*", "https://*/*", "file:///*", "storage"],
  "content_security_policy": "default-src 'none'; script-src 'self'; object-src 'self';style-src 'self' 'unsafe-inline';img-src 'self' data:;"
}